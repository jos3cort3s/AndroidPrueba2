<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutVistaPortait"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivBtnConteo"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="funcioneBtnMenu"
        android:background="@drawable/messages"
        android:layout_margin="5sp"/>
    <ImageView
        android:id="@+id/ivBtnAjustes"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="funcioneBtnMenu"
        android:background="@drawable/settings"
        android:layout_margin="5sp"/>
    <ImageView
        android:id="@+id/ivBtnInformes"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="funcioneBtnMenu"
        android:background="@drawable/pen"
        android:layout_margin="5sp"/>
    <ImageView
        android:id="@+id/ivBtnSalir"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="funcioneBtnMenu"
        android:background="@drawable/handclick"
        android:layout_margin="5sp"/>

</LinearLayout>